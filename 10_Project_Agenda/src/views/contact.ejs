<%- include('includes/head') %>
    <%- include('includes/nav') %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Contacts</h1>
                    <p class="text-center lead">Add or edit your contact</p>
                </div>

                <%- include('includes/messages') %>

                    <% if(contact._id){ %>
                    <form class="form-contact" action="/contact/edit/<%= contact._id %>" method="POST">
                    <% }else{ %>
                    <form class="form-contact" action="/contact/register" method="POST">
                    <% } %>
                        <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                        <div class="form-group">
                            <label>First name:</label>
                            <input type="text" class="form-control" name="first_name" value="<%= contact.first_name %>">
                            <p class="first-name-msg alert-danger"></p>
                        </div>
                        <div class="form-group">
                            <label>Last name:</label>
                            <input type="text" class="form-control" name="last_name" value="<%= contact.last_name %>">
                        </div>
                        <div class="form-group">
                            <label class="mt-3">E-mail:</label>
                            <input type="email" class="form-control" name="email" value="<%= contact.email %>">
                            <p class="email-msg alert-danger"></p>
                        </div>
                        <div class="form-group">
                            <label>Phone:</label>
                            <input type="tel" class="form-control" name="phone" value="<%= contact.phone %>">
                        </div>

                        <button type="submit" class="btn btn-primary mt-3">Save</button>
                    </form>

                    <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('includes/footer') %>