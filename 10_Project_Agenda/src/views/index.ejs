<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Agenda</h1>
            <p class="text-center lead">Yours contacts are below.</p>
        </div>

        <%- include('includes/messages') %>

        <div class="responsive-table">
            <% if(contacts.length > 0) { %>
            <table class="table my-3">
                <% contacts.forEach(contact => { %>
                    <tr>
                        <td><%= contact.first_name %></td>
                        <td><%= contact.last_name %></td>
                        <td><%= contact.phone %></td>
                        <td><%= contact.email %></td>
                        <td><a href="/contact/index/<%= contact._id %>">Edit</a></td>
                        <td><a class="text-danger" href="/contact/delete/<%= contact._id %>">Delete</a></td>
                    </tr> 
                <% }); %>               
            </table>
            <% } else { %>
                <p class="text-center lead">Don't exist contacts in your agenda.</p>
            <% } %>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>